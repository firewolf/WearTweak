<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <gradient
                android:startColor="@color/titleButtonCheckedGradientLight"
                android:endColor="@color/titleButtonCheckedGradientDark"
                android:angle="90" />
            <stroke android:width="1dp" android:color="@color/titleButtonCheckedBorder" />
            <corners
                android:radius="18dp" />
            <size android:height="36dp" android:width="36dp"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <gradient
                android:startColor="@color/titleButtonGradientDark"
                android:endColor="@color/titleButtonGradientLight"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="@color/titleButtonBorder" />
            <corners android:radius="18dp" />
            <size android:height="36dp" android:width="36dp"/>

        </shape>
    </item>
</selector>