<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:background">@drawable/radiobutton_selector</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@drawable/radiobutton_color_selector</item>
    </style>
    <style name="WifiButtonStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:background">@drawable/button_wifi_selector</item>
        <item name="android:src">@drawable/button_wifi_src_selector</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:button">@null</item>
    </style>
    <style name="BluetoothButtonStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:background">@drawable/button_wifi_selector</item>
        <item name="android:src">@drawable/button_bluetooth_src_selector</item>
        <item name="android:layout_marginLeft">8dp</item>
